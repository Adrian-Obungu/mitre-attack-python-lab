{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Virtual Environment",
            "type": "shell",
            "command": "python -m venv venv && .\\venv\\Scripts\\Activate.ps1 && pip install --upgrade pip && pip install -r config/requirements.txt",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": ".\\venv\\Scripts\\Activate.ps1 && python -m pytest tests/ -v",
            "group": "test"
        },
        {
            "label": "Validate Setup",
            "type": "shell",
            "command": ".\\venv\\Scripts\\Activate.ps1 && python validate_setup.py",
            "group": "test"
        }
    ]
}
