{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Virtual Environment",
            "type": "shell",
            "command": "python -m venv venv && source venv/Scripts/activate && pip install --upgrade pip && pip install -r config/requirements.txt",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "source venv/Scripts/activate && python -m pytest tests/ -v",
            "group": "test"
        },
        {
            "label": "Validate Setup",
            "type": "shell",
            "command": "source venv/Scripts/activate && python validate_setup.py",
            "group": "test"
        }
    ]
}
